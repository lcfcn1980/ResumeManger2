@model ResumeManger2.Models.Applicant
@{
    ViewData["Title"] = "Applicant Details";
}
<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-secondary text-white text-uppercase" style="height:45px">
            <h4>View Applicant</h4>
        </div>

        <form id="ApplicantForm" enctype="multipart/form-data" asp-action="Create">
            <div class="container-fluid btn-group">
                <div class="col-8">
                    <div class="row">
                        <div class="col-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12 form-group btn-group">
                                <div class="col-6">
                                    <label asp-for="Name" class="form-control-plaintext pr-3 font-weight-bold"></label>
                                </div>
                                <div class="col-6">
                                    <input asp-for="Name" class="form-control-plaintext" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="col-12 form-group btn-group">
                                <div class="col-6">
                                    <label asp-for="Gender" class="form-control-plaintext pr-3 font-weight-bold"></label>
                                </div>
                                <div class="col-6">
                                    <input asp-for="Gender" class="form-control-plaintext" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="col-12 form-group btn-group">
                                <div class="col-6">
                                    <label asp-for="Age" class="form-control-plaintext pr-3 font-weight-bold"></label>
                                </div>
                                <div class="col-6">
                                    <input asp-for="Age" class="form-control-plaintext" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="col-12 form-group btn-group">
                                <div class="col-6">
                                    <label asp-for="Qualification" class="form-control-plaintext pr-3 font-weight-bold"></label>
                                </div>
                                <div class="col-6">
                                    <input asp-for="Qualification" class="form-control-plaintext" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="col-12 form-group btn-group">
                                <div class="col-6">
                                    <label asp-for="TotalExperience" class="form-control-plaintext pr-3 font-weight-bold"></label>
                                </div>
                                <div class="col-6">
                                    <input asp-for="TotalExperience" class="form-control-plaintext" readonly />
                                </div>
                            </div>
                        </div>
                    </div>


                </div>

                <div class="col-4">
                    <div class="form-group col-12 justify-content-center align-middle">
                        <img id="PreviewPhoto" src="~/images/@Model.PhotoUrl" alt="Logo Image" width="200" height="200" style="border:1px; margin-top:20px;" />
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <table id="ExpTable" class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>
                                CompanyName
                            </th>
                            <th>
                                Designation
                            </th>
                            <th>
                                YearsWorked
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Experiences.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input asp-for="@Model.Experiences[i].CompanyName" class="form-control-plaintext" readonly />
                                </td>
                                <td>
                                    <input asp-for="@Model.Experiences[i].Designation" class="form-control-plaintext" readonly />
                                </td>
                                <td>
                                    <input asp-for="@Model.Experiences[i].YearsWorked" class="form-control-plaintext" readonly />
                                </td>

                                <td>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>


            <input type="hidden" id="hdnLastIndex" value="0" />

            <div class="col-12">
                <div class="col-6 form-group text-right p-2">
                    <a asp-action="Index" class="btn-primary btn-secondary">Back</a>

                </div>

            </div>



        </form>
    </div>


</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}